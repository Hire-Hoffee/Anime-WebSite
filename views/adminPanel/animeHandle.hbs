<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-12">
      {{#if message}}
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>{{message}}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      {{/if}}
    </div>
  </div>
</div>


<div class="container animeHandle">
  <div class="row mb-4">
    <div class="col-md-3"><h2>Аниме</h2></div>
    <div class="col-md-4"></div>
    <div class="col-md-2">
      <a href="/anime/create" class="btn search_filter_btn">Создать аниме</a>
    </div>
    <div class="col-md-3">
      <a href="/anime/create/animeDirector" class="btn search_filter_btn">Добавить режиссера</a>
    </div>
  </div>
  <table class="table table-bordered border-secondary">
    <thead class="tbody_style">
      <tr>
        <td>ID</td>
        <td>Название</td>
        <td>Действия</td>
      </tr>
    </thead>
    <tbody>
      {{#each anime}}
        <tr>
          <td>{{this.anime_id}}</td>
          <td>{{this.title}}</td>
          <td>
            <a href="/anime/update/{{this.anime_id}}" title="Редактировать">
              <svg xmlns="http://www.w3.org/2000/svg" fill="var(--color_3)" width="24" height="24" fill="currentColor" class="bi bi-brush-fill" viewBox="0 0 16 16">
                <path d="M15.825.12a.5.5 0 0 1 .132.584c-1.53 3.43-4.743 8.17-7.095 10.64a6.067 6.067 0 0 1-2.373 1.534c-.018.227-.06.538-.16.868-.201.659-.667 1.479-1.708 1.74a8.118 8.118 0 0 1-3.078.132 3.659 3.659 0 0 1-.562-.135 1.382 1.382 0 0 1-.466-.247.714.714 0 0 1-.204-.288.622.622 0 0 1 .004-.443c.095-.245.316-.38.461-.452.394-.197.625-.453.867-.826.095-.144.184-.297.287-.472l.117-.198c.151-.255.326-.54.546-.848.528-.739 1.201-.925 1.746-.896.126.007.243.025.348.048.062-.172.142-.38.238-.608.261-.619.658-1.419 1.187-2.069 2.176-2.67 6.18-6.206 9.117-8.104a.5.5 0 0 1 .596.04z"/>
              </svg>
            </a>
            <a href="/anime/delete/{{this.anime_id}}" title="Удалить">
              <svg xmlns="http://www.w3.org/2000/svg" fill="var(--color_3)" width="24" height="24" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
              </svg>
            </a>
            <a href="/anime/description/{{this.anime_id}}" title="Перейти">
              <svg xmlns="http://www.w3.org/2000/svg" fill="var(--color_3)" width="24" height="24" fill="currentColor" class="bi bi-arrow-right-square-fill" viewBox="0 0 16 16">
                <path d="M0 14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v12zm4.5-6.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5a.5.5 0 0 1 0-1z"/>
              </svg>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
 